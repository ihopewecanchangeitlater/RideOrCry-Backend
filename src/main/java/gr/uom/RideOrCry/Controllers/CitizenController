package gr.uom.RideOrCry.Controllers;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import gr.uom.RideOrCry.Model.Citizen;
import gr.uom.RideOrCry.Services.CitizenService;

@CrossOrigin(origins = "*", allowedHeaders = "*")
@RestController
@RequestMapping("/citizen")
public class CitizenController {

    @Autowired
    private CitizenService cs;

    @GetMapping("/citizens")
    public List<Citizen> getAllCitizens() {
        return cs.getAllCitizens();
    }

    @PostMapping("/login")
    public String citizenLogin(@RequestBody Citizen c) {
        return cs.citizenLogin(c);            
    }

    @PostMapping("/signup")
    public String citizenSignUp(@RequestBody Citizen c) {
        return cs.citizenSignUp(c);

    }
}
